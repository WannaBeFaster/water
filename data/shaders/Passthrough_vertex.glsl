#version 330 core

precision highp float;

//-------------------------------------------------------------------------------------------------
// Attributes
layout(location = 0) in vec3 a_pos;
layout(location = 1) in vec2 a_uv;

//-------------------------------------------------------------------------------------------------
// Out
smooth out vec2 v_uv;

//-------------------------------------------------------------------------------------------------
void main()
{
	v_uv = a_uv;
	gl_Position = vec4(a_pos, 1);
}
